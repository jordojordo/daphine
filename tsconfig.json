{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@api/*": ["./src/api/*"]
    }, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
